html
form(action='update_inventory_from_management' method='post')
  span weight amount
  br
  input(type='text' name='weight' required)
  br
  span subcut name
  br
  input(type='text' id='subcut_name' name='subcut_name' required)
  br
  br
  input(type='hidden' id='names' name='keys')
  input(type='hidden' id='names' value=user_id name='user_id')
  input(type='submit' value='submit!' required)
div#inventory_info

link(rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css")
script(src='http://code.jquery.com/jquery-latest.min.js')
script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.1/jquery-ui.min.js')
script(type='text/javascript').
  var alertMessage = '#{alert}';
  if(alertMessage != ''){
    alert(alertMessage);
  }
  var subcut_names_str = '#{subcut_names}';
  document.getElementById('names').setAttribute('value', subcut_names_str);
  var subcut_names = subcut_names_str.split(',');
  $("#subcut_name").autocomplete({
    source: subcut_names
  });
  var replaceAll = function(find, replace, str) {
    return str.replace(new RegExp(find, 'g'), replace);
  }
  var meat_data_str = JSON.stringify(JSON.parse(replaceAll('&quot;', '"', '#{meat_data_str}')), null, 2);
  $('#inventory_info').append('<pre>' + meat_data_str + '</pre>');





